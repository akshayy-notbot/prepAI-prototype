# Environment variables for PrepAI
# Copy this to .env for local development
# Set these in Render dashboard for production

# Database Configuration (Render PostgreSQL)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://prepai_db_user:your_password_here@dpg-d2hq4jje5dus73e1ajag-a.oregon-postgres.render.com/prepai_db

# Redis Configuration (Render Redis)
# This will be automatically set by Render from the redis service
REDIS_URL=redis://prepai-redis:6379/0

# Google Gemini API
GOOGLE_API_KEY=your_actual_google_api_key_here

# Python Version
PYTHON_VERSION=3.11.9

# Environment
ENVIRONMENT=production

# Optional: Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Optional: Redis Settings
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
